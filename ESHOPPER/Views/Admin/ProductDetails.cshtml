@model ESHOPPER.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    ViewBag.Active = "Sanpham";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <div class="flex items-center gap-3">
            <h2 class="text-2xl font-bold text-slate-800">@Model.TenSanPham</h2>
            <span class="px-2.5 py-0.5 rounded-full bg-slate-100 text-slate-600 text-xs font-mono border border-slate-200">
                ID: @Model.MaSP
            </span>
        </div>
    </div>

    <div class="flex items-center gap-3">
        <a href="@Url.Action("Productlist")" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors flex items-center gap-2">
            Quay lại
        </a>
        <a href="@Url.Action("ProductEdit", new { id = Model.MaSP })" class="px-4 py-2 bg-brand-blue hover:bg-brand-dark text-white font-bold rounded-lg shadow-md transition-colors flex items-center gap-2">
           Chỉnh sửa
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <div class="lg:col-span-2 space-y-6">

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-sm font-bold uppercase text-slate-400 tracking-wider mb-4">Hình ảnh hiển thị</h3>
            <div class="w-full h-72 bg-slate-50 rounded-lg border border-slate-100 flex items-center justify-center overflow-hidden relative group">
                @if (!string.IsNullOrEmpty(Model.AnhSP))
                {
                    <img src="@Url.Content("~/Images/products/" + Model.AnhSP)" alt="@Model.TenSanPham" class="h-full w-full object-contain p-2" />
                }
                else
                {
                    <div class="flex flex-col items-center text-slate-400">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>Chưa cập nhật hình ảnh</span>
                    </div>
                }
            </div>
            <div class="mt-3 flex justify-between items-center text-xs text-slate-500">
                <span>File: @(Model.AnhSP ?? "N/A")</span>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-sm font-bold uppercase text-slate-400 tracking-wider mb-4">Mô tả chi tiết</h3>
            <div class="prose prose-slate max-w-none text-slate-600 leading-relaxed text-sm">
                @if (!string.IsNullOrEmpty(Model.MoTa))
                {
                    @Html.Raw(Model.MoTa.Replace("\n", "<br>"))
                }
                else
                {
                    <p class="italic text-slate-400">Chưa có mô tả cho sản phẩm này.</p>
                }
            </div>
        </div>
    </div>

    <div class="lg:col-span-1 space-y-6">

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-sm font-bold uppercase text-slate-400 tracking-wider mb-4">Thông tin bán hàng</h3>

            <div class="mb-6 pb-6 border-b border-slate-100">
                <label class="text-xs text-slate-500 font-semibold uppercase block mb-1">Giá niêm yết</label>
                <div class="text-3xl font-bold text-brand-blue">
                    @string.Format("{0:N0}", Model.GiaBanLe) <span class="text-lg text-slate-400 font-medium">đ</span>
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="text-xs text-slate-500 font-semibold uppercase block mb-1">Trạng thái</label>
                    @Model.TrangThai
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="p-4 bg-slate-50 border-b border-slate-100">
                <h3 class="text-sm font-bold text-slate-700">Phân loại</h3>
            </div>
            <div class="divide-y divide-slate-100">
                <div class="p-4 flex justify-between items-center">
                    <span class="text-sm text-slate-500">Danh mục</span>
                    <a href="#" class="text-sm font-medium text-brand-blue hover:underline">
                        @(Model.DanhMucSanPham != null ? Model.DanhMucSanPham.TenDanhMuc : "---")
                    </a>
                </div>
                <div class="p-4 flex justify-between items-center">
                    <span class="text-sm text-slate-500">Nhà cung cấp</span>
                    <span class="text-sm font-medium text-slate-800">
                        @(Model.NhaCungCap != null ? Model.NhaCungCap.TenNCC : "---")
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>