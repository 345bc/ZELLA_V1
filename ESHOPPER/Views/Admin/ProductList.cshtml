@model IEnumerable<ESHOPPER.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Active = "Sanpham";

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">@ViewBag.Title</h2>
        <p class="text-sm text-slate-500">Quản lý kho hàng, giá bán và thông tin sản phẩm trên hệ thống.</p>
    </div>
    <div class="flex items-center gap-3">
        <a href="@Url.Action("ProductCreate")" class="inline-flex items-center px-4 py-2.5 bg-brand-blue hover:bg-brand-dark text-white text-sm font-semibold rounded-lg transition-all shadow-sm gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Thêm sản phẩm mới
        </a>
    </div>
</div>

<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 bg-slate-50/30 flex justify-between items-center">
        <span class="text-sm font-medium text-slate-600">Tổng cộng: <span class="text-brand-blue">@Model.Count()</span> sản phẩm</span>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 border-b border-slate-200">
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Thông tin sản phẩm</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Danh mục/NCC</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right">Giá bán</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-center">Trạng thái</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right">Thao tác</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-blue-50/40 transition-colors group">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-4">
                                @if (!string.IsNullOrEmpty(item.AnhSP))
                                {
                                    <a href="@Url.Action("Index", "Product_Variants",new { id = item.MaSP })">
                                        <img src="@Url.Content("~/Images/Products/" + item.AnhSP)" class="h-12 w-12 rounded-lg object-cover border border-slate-100 shadow-sm" alt="@item.TenSanPham" style="object-fit:contain"/>
                                    </a>
                                }
                                else
                                {
                                    <div class="h-12 w-12 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor text-slate-300">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                }
                                <div class="max-w-[200px]">
                                    <a href="@Url.Action("Index","Product_Variants", new { id = item.MaSP })" class="text-sm font-bold text-slate-700 truncate">@item.TenSanPham</a>
                                    <p class="text-xs text-slate-400 truncate">ID: #@item.MaSP</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-slate-600 font-medium">@item.DanhMucSanPham.TenDanhMuc</div>
                            <div class="text-[11px] text-slate-400 uppercase">NCC: @item.NhaCungCap.TenNCC</div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <span class="text-sm font-bold text-slate-700">@string.Format("{0:N0} VNĐ", item.GiaBanLe)</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            @if (item.TrangThai == "Hoạt động")
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                    Đang bán
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-600">
                                    Tạm ngưng
                                </span>
                            }
                        </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <a href="@Url.Action("ProductEdit", new { id = item.MaSP })" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Chỉnh sửa">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("ProductDetails", new { id = item.MaSP })" class="p-2 text-slate-600 hover:bg-slate-100 rounded-lg transition-colors" title="Chi tiết">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("ProductDelete", new { id = item.MaSP })" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Xóa">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
    }