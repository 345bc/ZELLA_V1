@model ESHOPPER.Models.User

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<div class="card shadow-sm mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h4>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-sm" })
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @* Luôn phải có HiddenFor cho ID trong form Edit *@
            @Html.HiddenFor(model => model.UserID)

            @* Thêm HiddenFor cho CreatedAt để giá trị này không bị mất khi lưu *@
            @Html.HiddenFor(model => model.CreatedAt)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row mb-3">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(
                        model => model.Role,
                        new SelectList(new[] { "Admin", "User", "Employee" }), // <-- THAY ĐỔI CÁC VAI TRÒ (ROLES) TẠI ĐÂY
                        "Select a Role",
                        new { @class = "form-select" }
                    )
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="row mb-3">
                @* THAY ĐỔI CỰC KỲ QUAN TRỌNG:
                    Chúng ta không bao giờ hiển thị PasswordHash.
                    Thay vào đó, chúng ta cung cấp một trường "New Password" (Mật khẩu mới) tùy chọn.
                    Giá trị "value = """ để đảm bảo ô này luôn trống khi tải trang.
                *@
                <label class="col-md-3 col-form-label" for="NewPassword">New Password</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.PasswordHash, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                        type = "password",
                        value = "", /* Luôn để trống */
                        placeholder = "Leave blank to keep current password"
                        }
                    })
                </div>
            </div>

            <hr />

            <div class="row mb-3">
                @*
                    THAY ĐỔI QUAN TRỌNG:
                    Không cho phép chỉnh sửa "CreatedAt".
                    Chỉ hiển thị dưới dạng văn bản (read-only).
                *@
                @Html.LabelFor(model => model.CreatedAt, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.CreatedAt)
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>