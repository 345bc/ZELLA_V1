@model ESHOPPER.Models.User

@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<div class="card shadow-sm mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h4>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-sm" })
    </div>

    <div class="card-body">
        @* Sử dụng <dl class="row"> của Bootstrap 5
            để thay thế cho <dl class="dl-horizontal"> cũ
        *@
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Role)
            </dd>

            @* THAY ĐỔI QUAN TRỌNG:
                Đã XÓA trường PasswordHash.
                Không bao giờ nên hiển thị mã hash mật khẩu ra giao diện.
            *@

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
        </dl>

        <hr />

        @* Chuyển link "Edit" thành một nút bấm rõ ràng *@
        <div class="mt-3">
            @Html.ActionLink("Edit this User", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary" })
        </div>

    </div>
</div>