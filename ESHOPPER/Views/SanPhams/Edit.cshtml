@model ESHOPPER.Models.SanPham

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

@* THAY ĐỔI QUAN TRỌNG: Thêm "enctype" để cho phép tải file (ảnh) lên *@
@using (Html.BeginForm("Edit", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @* PHẢI có HiddenFor cho MaSP (ID) trong form Edit *@
    @Html.HiddenFor(model => model.MaSP)

    @* THAY ĐỔI QUAN TRỌNG: Thêm trường ẩn cho AnhSP.
        Việc này để giữ lại đường dẫn ảnh cũ nếu người dùng không tải ảnh mới.
    *@
    @Html.HiddenFor(model => model.AnhSP)

    <div class="card shadow-sm mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h4 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h4>
            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>

    <div class="row">
        @* CỘT BÊN TRÁI (Thông tin chính) *@
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">Product Details</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "form-label" })
                        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.GiaBanLe, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.GiaBanLe, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                        @Html.ValidationMessageFor(model => model.GiaBanLe, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.AnhSP))
                            {
                                <img src="@Url.Content("~/Images/Products/"+Model.AnhSP)" alt="Current Image" class="img-thumbnail mb-2" style="max-width: 200px; height: auto;" />
                            }
                            else
                            {
                                <p class="text-muted">No current image.</p>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageFile" class="form-label">Upload New Image (Optional)</label>
                        <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        <div class="form-text">Để trống ô này nếu bạn không muốn thay đổi ảnh.</div>
                    </div>
                </div>
            </div>
        </div>

        @* CỘT BÊN PHẢI (Thuộc tính) *@
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">Organization</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaDM, "Category", htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownList("MaDM", null, "Select Category", htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaNCC, "Supplier", htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownList("MaNCC", null, "Select Supplier", htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "form-label" })
                        @* Chuyển sang DropDownListFor để chọn giá trị hiện tại (Model.TrangThai) *@
                        @Html.DropDownListFor(model => model.TrangThai,
                            new SelectList(new[] { "Hoạt động", "Hết hàng", "Ngừng kinh doanh","Ẩn" }, Model.TrangThai),
                            "Select Status",
                            new { @class = "form-select" }
                        )
                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-4">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
}