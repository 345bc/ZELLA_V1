@model ESHOPPER.Models.BienTheSanPham

@{
    ViewBag.Title = "Chi tiết biến thể";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Lấy tên sản phẩm cha (được truyền từ Controller hoặc lấy qua Navigation Property)
    string parentName = ViewBag.TenSanPham ?? (Model.SanPham != null ? Model.SanPham.TenSanPham : "Sản phẩm gốc");
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <div class="flex items-center gap-3">
            <h2 class="text-2xl font-bold text-slate-800">Chi tiết biến thể</h2>
            <span class="px-2.5 py-0.5 rounded-full bg-slate-100 text-slate-600 text-xs font-mono border border-slate-200">
                ID: @Model.MaBienThe
            </span>
        </div>
        <nav class="flex mt-2 text-sm text-slate-500">
            <span class="text-slate-800 font-medium">@parentName</span>
        </nav>
    </div>

    <div class="flex items-center gap-3">
        <a href="@Url.Action("Index", "Product_Variants", new { id = Model.MaSP })" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors">
            Quay lại
        </a>
        <a href="@Url.Action("Edit", "Product_Variants", new { id = Model.MaBienThe })" class="px-4 py-2 bg-brand-blue hover:bg-brand-dark text-white font-bold rounded-lg shadow-md transition-colors">
            Chỉnh sửa
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <div class="lg:col-span-2 space-y-6">

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-xs font-bold uppercase text-slate-400 tracking-wider mb-4">Hình ảnh biến thể</h3>

            <div class="w-full h-80 bg-slate-50 rounded-lg border border-slate-100 flex items-center justify-center overflow-hidden relative">
                @if (!string.IsNullOrEmpty(Model.AnhBienThe))
                {
                    <img src="@Url.Content("~/Content/Images/" + Model.AnhBienThe)" alt="Ảnh biến thể" class="h-full w-full object-contain p-4" />
                }
                else
                {
                    <div class="flex flex-col items-center text-slate-400">
                        <span class="text-sm font-medium">Chưa có hình ảnh riêng</span>
                        <span class="text-xs mt-1 opacity-70">(Sẽ hiển thị ảnh của sản phẩm gốc)</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="lg:col-span-1 space-y-6">

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-xs font-bold uppercase text-slate-400 tracking-wider mb-4">Đặc điểm kỹ thuật</h3>

            <div class="space-y-4">
                <div class="flex justify-between items-center pb-3 border-b border-slate-50">
                    <span class="text-sm text-slate-500">Màu sắc</span>
                    <span class="text-base font-bold text-slate-800">
                        @(Model.MauSac != null ? Model.MauSac.TenMau : "---")
                    </span>
                </div>
                <div class="flex justify-between items-center pt-1">
                    <span class="text-sm text-slate-500">Kích thước</span>
                    <span class="text-base font-bold text-slate-800">
                        @(Model.KichThuoc != null ? Model.KichThuoc.TenSize : "---")
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="text-xs font-bold uppercase text-slate-400 tracking-wider mb-4">Thông tin bán hàng</h3>

            <div class="mb-6 pb-6 border-b border-slate-100">
                <label class="text-xs text-slate-500 font-semibold uppercase block mb-1">Giá bán</label>
                <div class="text-3xl font-bold text-brand-blue">
                    @string.Format("{0:N0}", Model.GiaBan) <span class="text-lg text-slate-400 font-medium">VNĐ</span>
                </div>
            </div>

            <div class="mb-6">
                <label class="text-xs text-slate-500 font-semibold uppercase block mb-1">Tồn kho hiện tại</label>
                <div class="flex items-center gap-2">
                    <span class="text-xl font-bold text-slate-800">@Model.SoLuongTon</span>
                    <span class="text-sm text-slate-500">sản phẩm</span>
                </div>
            </div>

            <div>
                <label class="text-xs text-slate-500 font-semibold uppercase block mb-2">Trạng thái</label>
                @if (Model.MaTrangThai == 1)
                {
                    <span class="inline-flex px-3 py-1 rounded bg-green-50 text-green-700 text-sm font-bold border border-green-100">
                        Hiển thị
                    </span>
                }
                else
                {
                    <span class="inline-flex px-3 py-1 rounded bg-slate-100 text-slate-600 text-sm font-bold border border-slate-200">
                        Đang ẩn
                    </span>
                }
            </div>
        </div>

    </div>
</div>