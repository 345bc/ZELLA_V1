@model IEnumerable<ESHOPPER.Models.BienTheSanPham>

@{
    ViewBag.Title = "Quản lý biến thể sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Active = "Sanpham"; 
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">Danh sách biến thể</h2>
        <p class="text-sm text-slate-500">Quản lý chi tiết màu sắc, kích thước và tồn kho cho từng sản phẩm.</p>
    </div>
    <div class="flex items-center gap-3">
        <a href="@Url.Action("Create", new {productId=ViewBag.MaSanPham})" class="inline-flex items-center px-4 py-2.5 bg-brand-blue hover:bg-brand-dark text-white text-sm font-semibold rounded-lg transition-all shadow-sm gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Thêm biến thể mới
        </a>
    </div>
</div>

<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 bg-slate-50/30 flex justify-between items-center">
        <span class="text-sm font-medium text-slate-600">Tổng số biến thể: <span class="text-brand-blue font-bold">@Model.Count()</span></span>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 border-b border-slate-200">
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Sản phẩm / Ảnh</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Thuộc tính (Màu - Size)</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Kho hàng & Giá</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-center">Trạng thái</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right">Thao tác</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var item in Model)
                {
                    if (item.MaSP == item.MaSP)
                    {
                        <tr class="hover:bg-blue-50/40 transition-colors group">
                            <td class="px-6 py-4 align-top">
                                <div class="flex items-start gap-4">
                                    <div class="relative">
                                        @if (!string.IsNullOrEmpty(item.AnhBienThe))
                                        {
                                            <img src="@Url.Content("~/Images/Product_Variants/" + item.AnhBienThe)" class="h-14 w-14 rounded-lg object-cover border border-slate-200 shadow-sm" alt="Ảnh biến thể" />
                                        }
                                        else
                                        {
                                            <div class="h-14 w-14 rounded-lg bg-slate-100 flex items-center justify-center border border-slate-200">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                        }
                                    </div>
                                    <div>
                                        <p class="text-sm font-bold text-slate-700 hover:text-brand-blue transition-colors cursor-pointer">
                                            @item.SanPham.TenSanPham
                                        </p>
                                        <p class="text-[11px] text-slate-400 mt-1 font-mono">ID: #@item.MaBienThe</p>
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-4 align-middle">
                                <div class="flex flex-col gap-2">
                                    <div class="flex items-center gap-2">
                                        <span class="text-xs text-slate-400 w-8">Màu:</span>
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-slate-100 text-slate-700 border border-slate-200">
                                            @item.MauSac.TenMau
                                        </span> 
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-xs text-slate-400 w-8">Size:</span>
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-slate-100 text-slate-700 border border-slate-200">
                                            @item.KichThuoc.TenSize
                                        </span>
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-4 align-middle">
                                <div class="space-y-1">
                                    <div class="flex items-center justify-between gap-4">
                                        <span class="text-xs text-slate-500">Giá bán:</span>
                                        <span class="text-sm font-bold text-slate-700">@string.Format("{0:N0} VNĐ", item.GiaBan)</span>
                                    </div>
                                    <div class="flex items-center justify-between gap-4">
                                        <span class="text-xs text-slate-500">Tồn kho:</span>
                                        @if (item.SoLuongTon > 0)
                                        {
                                            <span class="text-sm font-semibold text-slate-700">@item.SoLuongTon</span>
                                        }
                                        else
                                        {
                                            <span class="text-xs font-bold text-red-500 bg-red-50 px-2 py-0.5 rounded">Hết hàng</span>
                                        }
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-4 align-middle text-center">
                                @if (item.MaTrangThai == 1  ) 
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 border border-green-200">
                                        <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
                                        Hiển thị
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 border border-gray-200">
                                        <span class="w-1.5 h-1.5 bg-gray-400 rounded-full mr-1.5"></span>
                                        Ẩn
                                    </span>
                                }
                            </td>

                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <a href="@Url.Action("Edit", new { id = item.MaBienThe })" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Chỉnh sửa">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.MaBienThe})" class="p-2 text-slate-600 hover:bg-slate-100 rounded-lg transition-colors" title="Chi tiết">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.MaBienThe})" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Xóa">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-12">
            <div class="bg-slate-50 rounded-full h-20 w-20 flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
            </div>
            <h3 class="text-lg font-medium text-slate-900">Chưa có biến thể nào</h3>
            <p class="mt-1 text-sm text-slate-500">Hãy bắt đầu bằng cách thêm một biến thể sản phẩm mới.</p>
        </div>
    }
</div>