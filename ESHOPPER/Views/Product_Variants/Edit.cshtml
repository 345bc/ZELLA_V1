@model ESHOPPER.Models.BienTheSanPham

@{
    ViewBag.Title = "Cập nhật biến thể";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Lấy tên sản phẩm cha để hiển thị (nếu có trong ViewBag)
    string parentName = ViewBag.TenSanPham ?? "Sản phẩm gốc";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">Chỉnh sửa biến thể</h2>
    </div>
    <div class="flex items-center gap-3">
        <a href="@Url.Action("Index", "Product_Variants", new { id = Model.MaSP })" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors">
            Hủy bỏ
        </a>
        <button form="editVariantForm" type="submit" class="px-4 py-2 bg-brand-blue hover:bg-brand-dark text-white font-bold rounded-lg shadow-md transition-colors flex items-center gap-2">
            Lưu thay đổi
        </button>
    </div>
</div>

@using (Html.BeginForm("Edit", "Product_Variants", FormMethod.Post, new { id = "editVariantForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaBienThe)
    @Html.HiddenFor(model => model.MaSP) @* Giữ nguyên ID sản phẩm cha *@
    @Html.HiddenFor(model => model.AnhBienThe) @* Giữ tên ảnh cũ *@

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2 space-y-6">

            <div class="bg-blue-50 border border-blue-100 rounded shadow-sm p-6">
                <label class="block text-xs font-bold text-blue-600 uppercase mb-2">Thuộc sản phẩm</label>
                <div class="text-lg font-bold text-slate-800">@parentName</div>
                <div class="text-xs text-slate-500 mt-1 font-mono">Product ID: #@Model.MaSP</div>
            </div>

            <div class="bg-white border border-slate-200 rounded shadow-sm p-6">
                <label class="block text-xs font-bold text-slate-500 uppercase mb-4">Hình ảnh biến thể</label>

                <div class="flex flex-col sm:flex-row gap-6">
                    <div class="w-full sm:w-40 h-40 bg-slate-50 border border-slate-200 rounded flex items-center justify-center overflow-hidden flex-shrink-0">
                        @if (!string.IsNullOrEmpty(Model.AnhBienThe))
                        {
                            <img id="previewImage" src="@Url.Content("~/Content/Images/" + Model.AnhBienThe)" alt="Ảnh biến thể" class="w-full h-full object-contain p-2" />
                        }
                        else
                        {
                            <img id="previewImage" src="#" class="hidden w-full h-full object-contain p-2" />
                            <span id="placeholderText" class="text-xs text-slate-400 font-medium">Không có ảnh</span>
                        }
                    </div>

                    <div class="flex-1">
                        <label class="block text-sm font-medium text-slate-700 mb-2">Chọn ảnh mới (Tùy chọn)</label>
                        <input type="file" name="ImageUpload" id="ImageUpload" accept="image/*" class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-xs file:font-bold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer border border-slate-300 rounded p-1" />
                        <p class="text-xs text-slate-500 mt-2">Định dạng hỗ trợ: JPG, PNG. Nếu không chọn, hệ thống sẽ giữ ảnh cũ.</p>
                        @Html.ValidationMessageFor(model => model.AnhBienThe, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-1 space-y-6">

            <div class="bg-white border border-slate-200 rounded shadow-sm p-6 space-y-5">

                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Màu sắc</label>
                    @Html.DropDownList("MaMau", null, new { @class = "block w-full rounded border-slate-300 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" })
                    @Html.ValidationMessageFor(model => model.MaMau, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Kích thước</label>
                    @Html.DropDownList("MaSize", null, new { @class = "block w-full rounded border-slate-300 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" })
                    @Html.ValidationMessageFor(model => model.MaSize, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div class="border-t border-slate-100 pt-4"></div>

                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Giá bán (VNĐ)</label>
                    <div class="relative rounded-md shadow-sm">
                        @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "w-full rounded-lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200 pl-4 pr-12 font-semibold text-slate-700", type = "number" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Tồn kho</label>
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "block w-full rounded border-slate-300 focus:border-blue-500 focus:ring-blue-500 font-bold text-slate-800 sm:text-sm", type = "number" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>
            </div>

            <div class="bg-white border border-slate-200 rounded shadow-sm p-6">
                <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Trạng thái</label>
                <select name="MaTrangThai" class="block w-full rounded border-slate-300 focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option value="1" @(Model.MaTrangThai == 1 ? "selected" : "")>Hiển thị</option>
                    <option value="0" @(Model.MaTrangThai == 0 ? "selected" : "")>Đang ẩn</option>
                </select>

                <div class="mt-4 pt-4 border-t border-slate-100">
                    <div class="flex justify-between items-center text-xs text-slate-500">
                        <span>Mã Biến Thể:</span>
                        <span class="font-mono font-bold">#@Model.MaBienThe</span>
                    </div>
                    <div class="flex justify-between items-center text-xs text-slate-500 mt-1">
                        <span>Cập nhật lần cuối:</span>
                        <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // Script preview ảnh (Giống hệt trang Sản phẩm)
        document.getElementById('ImageUpload').onchange = function (evt) {
            var tgt = evt.target || window.event.srcElement, files = tgt.files;
            if (FileReader && files && files.length) {
                var fr = new FileReader();
                fr.onload = function () {
                    var img = document.getElementById('previewImage');
                    var txt = document.getElementById('placeholderText');
                    img.src = fr.result;
                    img.classList.remove('hidden');
                    if (txt) txt.style.display = 'none';
                }
                fr.readAsDataURL(files[0]);
            }
        }
    </script>
}