@model ESHOPPER.Models.BienTheSanPham

@{
    ViewBag.Title = "Thêm biến thể mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string parentName = ViewBag.TenSanPham ?? "Sản phẩm";
}


<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">Tạo biến thể mới</h2>
    </div>

    <div class="flex items-center gap-3">
        <a href="@Url.Action("Index", "Product_variants", new { Id = Model.MaSP })" class="px-4 py-2.5 bg-white border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-all">
            Hủy bỏ
        </a>
        <button form="createVariantForm" type="submit" class="px-4 py-2.5 bg-brand-blue hover:bg-brand-dark text-white font-bold rounded-lg shadow-md transition-all flex items-center gap-2">
            Lưu biến thể
        </button>
    </div>
</div>

@using (Html.BeginForm("Create", "Product_Variants", FormMethod.Post, new { id = "createVariantForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.MaSP)


    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2 space-y-6">

            <div class="bg-blue-50 border border-blue-100 rounded-xl p-5 flex items-start gap-4 shadow-sm"> 
                <div>
                    <p class="text-xs font-bold text-blue-600 uppercase tracking-wider mb-1">Đang thêm biến thể cho sản phẩm</p>
                    <h3 class="text-lg font-bold text-slate-800">@parentName</h3>
                    <p class="text-xs text-blue-400 mt-1 font-mono">ID: #@Model.MaSP</p>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
                <h3 class="text-base font-bold text-slate-800 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Hình ảnh biến thể
                </h3>

                <div class="flex flex-col items-center">
                    <label for="ImageUpload" class="w-full h-52 border-2 border-dashed border-slate-300 rounded-xl cursor-pointer hover:border-brand-blue hover:bg-blue-50 transition-all flex flex-col items-center justify-center relative overflow-hidden group">

                        <div id="uploadPlaceholder" class="flex flex-col items-center text-slate-400 group-hover:text-brand-blue transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            <span class="text-sm font-medium">Nhấn để tải ảnh lên</span>
                            <span class="text-xs mt-1 opacity-70">JPG, PNG, GIF (Max 5MB)</span>
                        </div>

                        <img id="previewImage" src="#" class="hidden absolute inset-0 w-full h-full object-contain p-2 bg-white" alt="Preview" />

                        <input type="file" name="ImageUpload" id="ImageUpload" class="hidden" accept="image/*" />
                    </label>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
                <h3 class="text-base font-bold text-slate-800 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Thiết lập bán hàng
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Giá bán (VNĐ) <span class="text-red-500">*</span></label>
                        <div class="relative">
                            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "w-full rounded-lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200 font-bold text-slate-700 pl-3 pr-10", type = "number", placeholder = "0" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Số lượng tồn kho <span class="text-red-500">*</span></label>
                        @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "w-full rounded-lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200", type = "number", min = "0" } })
                        @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
                <h3 class="text-xs font-bold uppercase text-slate-400 tracking-wider mb-4">Thuộc tính biến thể</h3>

                <div class="space-y-5">
                    <div>
                        <label class="block text-sm font-bold text-slate-700 mb-1">Màu sắc <span class="text-red-500">*</span></label>
                        @Html.DropDownList("MaMau", null, "--- Chọn màu ---", new { @class = "w-full -lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200 bg-slate-50" })
                        @Html.ValidationMessageFor(model => model.MaMau, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold text-slate-700 mb-1">Kích thước <span class="text-red-500">*</span></label>
                        @Html.DropDownList("MaSize", null, "--- Chọn size ---", new { @class = "w-full rounded-lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200 bg-slate-50" })
                        @Html.ValidationMessageFor(model => model.MaSize, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
                <h3 class="text-xs font-bold uppercase text-slate-400 tracking-wider mb-4">Trạng thái</h3>

                <div>
                    <div class="relative">
                        <select name="MaTrangThai" class="w-full rounded-lg border-slate-300 focus:border-brand-blue focus:ring focus:ring-blue-200">
                            <option value="1" selected>Hiển thị</option>
                            <option value="0">Ẩn</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.MaTrangThai, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>
            </div>

            <div class="block md:hidden">
                <button type="submit" class="w-full py-3 bg-brand-blue text-white font-bold rounded-lg shadow-lg">Lưu biến thể</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // Script xem trước ảnh (Preview Image)
        document.getElementById('ImageUpload').onchange = function (evt) {
            var tgt = evt.target || window.event.srcElement,
                files = tgt.files;

            // Kiểm tra trình duyệt có hỗ trợ FileReader không
            if (FileReader && files && files.length) {
                var fr = new FileReader();
                fr.onload = function () {
                    var img = document.getElementById('previewImage');
                    var placeholder = document.getElementById('uploadPlaceholder');

                    // Hiển thị ảnh và ẩn placeholder
                    img.src = fr.result;
                    img.classList.remove('hidden');
                    placeholder.classList.add('hidden');
                }
                fr.readAsDataURL(files[0]);
            }
        }
    </script>
}