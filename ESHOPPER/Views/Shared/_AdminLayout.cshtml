<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Quản trị hệ thống</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        sidebar: {
                            bg: '#eff6ff',      // blue-50
                            surface: '#ffffff',
                            border: '#dbeafe',  // blue-100
                        },
                        brand: {
                            blue: '#1d4ed8',    // blue-700
                            dark: '#1e3a8a',    // blue-900
                            light: '#3b82f6',   // blue-500
                        }
                    },
                    boxShadow: {
                        'header': '0 1px 2px 0 rgba(0, 0, 0, 0.05)',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-slate-800 font-sans antialiased h-screen flex overflow-hidden">

    <aside class="w-72 bg-sidebar-bg flex-shrink-0 flex flex-col border-r border-blue-200/60 z-20">

        <div class="h-16 flex items-center px-6 border-b border-blue-200/60 bg-sidebar-bg">
            <a href="@Url.Action("Dashboard")" class="flex flex-col">
                <span class="text-xl font-extrabold tracking-tight text-brand-dark">
                    ZELLA<span class="text-brand-light">ADMIN</span>
                </span>
            </a>
        </div>

        <nav class="flex-1 overflow-y-auto py-6">

            <div class="px-6 mb-3">
                <p class="text-[11px] font-bold text-slate-400 uppercase tracking-wider">Tổng quan</p>
            </div>

            <div class="px-3 mb-1">
                <a href="@Url.Action("DashBoard", "Admin")"
                   class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
                   @(ViewBag.Active == "Dashboard"
                       ? "bg-white border-brand-blue text-brand-blue shadow-sm"
                       : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                    DashBoard
                </a>
            </div>

            <div class="my-6 border-t border-blue-200/50 mx-6"></div>

                <div class="px-6 mb-3">
                    <p class="text-[11px] font-bold text-slate-400 uppercase tracking-wider">Quản lý dữ liệu</p>
                </div>

                <div class="space-y-1 px-3">
                    <a href="@Url.Action("ProductList", "Admin")"
                       class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
       @(ViewBag.Active == "Sanpham"
           ? "bg-white border-brand-blue text-brand-blue shadow-sm"
           : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                        Danh sách sản phẩm
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Index", "Category")"
                           class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
@(ViewBag.Active == "category"
    ? "bg-white border-brand-blue text-brand-blue shadow-sm"
    : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                            Danh mục sản phẩm
                        </a>

                        <a href="@Url.Action("Index", "Order")"
                           class="flex items-center justify-between px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
@(ViewBag.Active == "Donhang"
    ? "bg-white border-brand-blue text-brand-blue shadow-sm"
    : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                            <span>Đơn hàng</span>
                        </a>
                    }
                </div>

            <div class="my-6 border-t border-blue-200/50 mx-6"></div>

            @*<div class="px-6 mb-3">
            <p class="text-[11px] font-bold text-slate-400 uppercase tracking-wider">Tài khoản</p>
        </div>

        <div class="px-3">
            <a href="@Url.Action("#", "Customers")"
               class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
               @(ViewBag.Active == "Khachhang"
                   ? "bg-white border-brand-blue text-brand-blue shadow-sm"
                   : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                Hồ sơ khách hàng
            </a>
            <a href="@Url.Action("Index", "Customers")"
               class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-r-lg border-l-[5px] transition-all duration-200
                 @(ViewBag.Active == "Users"
                     ? "bg-white border-brand-blue text-brand-blue shadow-sm"
                     : "border-transparent text-slate-600 hover:bg-blue-100 hover:text-brand-blue")">
                Quản lý tài khoản
            </a>
        </div>*@
        </nav>

    </aside>

    <div class="flex-1 flex flex-col h-screen w-full relative bg-white">

        <header class="h-16 flex items-center justify-between px-8 border-b border-slate-100 bg-white sticky top-0 z-30 shadow-header">
            <div>
                <h1 class="text-xl font-bold text-slate-800">@ViewBag.Title</h1>
            </div>

            <div class="flex items-center gap-4">

                <div class="text-right leading-tight hidden md:block">
                    <p class="text-sm font-bold text-slate-700">Administrator</p>
                    <a href="@Url.Action("Logout", "Auth")" class="text-[11px] font-medium text-slate-400 hover:text-red-500 transition-colors">
                        Đăng xuất
                    </a>
                </div>

                <div class="relative group cursor-pointer">
                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 text-white flex items-center justify-center font-bold text-lg shadow-lg ring-2 ring-white border border-blue-100">
                        A
                    </div>

                    <span class="absolute bottom-0 right-0 block h-2.5 w-2.5 rounded-full bg-green-500 ring-2 ring-white"></span>
                </div>

            </div>
        </header>

        <main class="flex-1 overflow-x-hidden overflow-y-auto p-8 bg-white">
            <div class="w-full">
                @RenderBody()
            </div>

            <div class="mt-12 pt-6 border-t border-gray-50 text-center">
                <p class="text-[11px] text-gray-300 uppercase tracking-widest">&copy; @DateTime.Now.Year Zella Corp</p>
            </div>
        </main>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>