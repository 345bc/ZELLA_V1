<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-3 container-fluid px-5">
        <div class="container-fluid px-5">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center">
                @*<span class="h1 font-weight-bold text-primary text-uppercase mb-0 mr-1">e</span>*@
                <span class="h1 font-weight-bold text-dark text-uppercase mb-0" style="letter-spacing: 2px;">ZELLA</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <div class="navbar-nav ml-auto py-0">
                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link px-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active text-primary font-weight-bold" : "")">Home</a>
                    <a href="@Url.Action("Shop", "Home")" class="nav-item nav-link px-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Shop" ? "active text-primary font-weight-bold" : "")">Shop</a>
                    @*<a href="#" class="nav-item nav-link px-3">Blog</a>*@
                    @*<a href="@Url.Action("Contact", "Home")" class="nav-item nav-link px-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active text-primary font-weight-bold" : "")">Contact</a>*@
                </div>

                <div class="d-none d-lg-block mx-3" style="border-left: 1px solid #e0e0e0; height: 25px;"></div>

                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Cart", "Home")" class="btn position-relative border-0 p-0 mr-3">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span id="cartBadge" class="badge badge-danger rounded-circle position-absolute"
                              style="top: -5px; right: -8px; font-size: 10px; padding: 3px 5px;">
                            @* Bạn có thể thay số 0 bằng @Session["CartCount"] nếu có xử lý *@
                            0
                        </span>
                    </a>

                    @if (Session["UserName"] != null)
                    {
                        // TRƯỜNG HỢP: ĐÃ ĐĂNG NHẬP
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle d-flex align-items-center" data-toggle="dropdown" aria-expanded="false">
                                <img src="https://ui-avatars.com/api/?name=@Session["UserName"]&background=D19C97&color=fff" class="rounded-circle mr-2" style="width:30px; height:30px;">
                                <span class="font-weight-bold text-dark">@Session["UserName"]</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right rounded-0 m-0 shadow">
                                <a href="@Url.Action("Profile", "Home")" class="dropdown-item"><i class="fas fa-user mr-2 text-muted"></i> Profile</a>
                                <a href="@Url.Action("Orders", "Home")" class="dropdown-item"><i class="fas fa-box mr-2 text-muted"></i> My Orders</a>
                                <div class="dropdown-divider"></div>

                                <a href="@Url.Action("Logout", "Auth")" class="dropdown-item text-danger js-loading"><i class="fas fa-sign-out-alt mr-2"></i> Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        // TRƯỜNG HỢP: CHƯA ĐĂNG NHẬP (GUEST)
                        <div class="auth-actions d-flex align-items-center ml-3">
                            <a href="@Url.Action("Login", "Auth")" class="btn-auth btn-login mr-2 js-loading">
                                Login
                            </a>

                            <a href="@Url.Action("Register", "Auth")" class="btn-auth btn-register js-loading">
                                Register
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
