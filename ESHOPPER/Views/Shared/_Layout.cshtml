     /* --- Cấu hình chung --- */
.auth-actions .btn-auth {
    padding: 8px 24px;       /* Tăng chiều ngang một chút cho thoáng */
    border-radius: 4px;      /* Giữ nguyên bo góc nhẹ (vuông vắn, hiện đại) */
    font-weight: 600;        /* Chữ đậm hơn để dễ đọc */
    font-size: 13px;         /* Size chữ gọn gàng */
    text-transform: uppercase; /* Viết hoa toàn bộ -> Rất phổ biến trong Fashion Ecommerce */
    letter-spacing: 1px;     /* Khoảng cách chữ rộng ra cho sang */
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
}

/* --- Nút Login (Tinh tế) --- */
.auth-actions .btn-login {
    color: #333;             /* Màu đen khói */
    background: transparent;
    border: 1px solid #e0e0e0;
    margin-right: 10px;      /* Cách nút Register ra 1 chút */
}

.auth-actions .btn-login:hover {
    color: #D19C97;          /* Hover đổi màu chữ sang màu chủ đạo */
    border-color: #D19C97;   /* Viền cũng đổi màu */
    background: #fff;
}

/* --- Nút Register (Điểm nhấn chính - Hero Button) --- */
.auth-actions .btn-register {
    background-color: #D19C97; /* Màu hồng cam đất chủ đạo */
    color: #fff;
    border: 1px solid #D19C97;

    /* Đổ bóng màu cùng tone để tạo hiệu ứng "Glow" nổi bật */
    box-shadow: 0 4px 15px rgba(209, 156, 151, 0.5);
}

.auth-actions .btn-register:hover {
    background-color: #c78681; /* Đậm hơn khi hover */
    border-color: #c78681;
    color: #fff;

    /* Khi hover thì nút nhấc lên và bóng đậm hơn */
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(209, 156, 151, 0.7);
