<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Quản trị viên</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        /* --- SIDEBAR STYLE --- */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar-wrapper {
            min-width: 250px;
            max-width: 250px;
            background-color: #343a40; /* Màu nền tối */
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh;
        }

            #sidebar-wrapper.toggled {
                margin-left: -250px;
            }

        .sidebar-heading {
            padding: 1.5rem 1rem;
            font-size: 1.2rem;
            font-weight: bold;
            color: #D19C97; /* Màu thương hiệu */
            text-align: center;
            border-bottom: 1px solid #4b545c;
            letter-spacing: 1px;
        }

        .list-group-item {
            padding: 15px 20px;
            background-color: transparent;
            color: #c2c7d0;
            border: none;
            font-weight: 500;
        }

            .list-group-item:hover {
                background-color: #494e53;
                color: #fff;
                text-decoration: none;
            }

            .list-group-item.active {
                background-color: #D19C97; /* Highlight màu hồng */
                color: #fff;
                border-color: #D19C97;
            }

            .list-group-item i {
                width: 25px;
                text-align: center;
                margin-right: 10px;
            }

        /* --- CONTENT STYLE --- */
        #page-content-wrapper {
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .navbar-custom {
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            padding: 10px 20px;
        }

        .container-fluid-content {
            padding: 20px;
            flex-grow: 1;
        }

        /* Card Dashboard Style */
        .card-box {
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            padding: 20px;
            margin-bottom: 20px;
        }

        /* Footer */
        footer {
            background: #fff;
            padding: 15px;
            text-align: center;
            border-top: 1px solid #eee;
            color: #666;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar-wrapper {
                margin-left: -250px;
            }

                #sidebar-wrapper.toggled {
                    margin-left: 0;
                }
        }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-shopping-bag mr-2"></i> ZELLA
            </div>
            <div class="list-group list-group-flush mt-3">

                @* Dashboard *@
                <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action @(ViewBag.Active == "Dashboard" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i> Tổng quan
                </a>

                @* Quản lý Sản phẩm *@
                <a href="@Url.Action("Index", "Products")" class="list-group-item list-group-item-action @(ViewBag.Active == "Sanpham" ? "active" : "")">
                    <i class="fas fa-box"></i> Sản phẩm
                </a>

                @* Quản lý Danh mục *@
                <a href="@Url.Action("Index", "Categories")" class="list-group-item list-group-item-action @(ViewBag.Active == "Danhmuc" ? "active" : "")">
                    <i class="fas fa-list"></i> Danh mục
                </a>

                @* Quản lý Đơn hàng *@
                <a href="@Url.Action("Index", "Orders")" class="list-group-item list-group-item-action @(ViewBag.Active == "Donhang" ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i> Đơn hàng
                    <span class="badge badge-warning float-right text-dark">3</span> @* Ví dụ số đơn mới *@
                </a>

                @* Quản lý Khách hàng *@
                <a href="@Url.Action("Index", "Customers")" class="list-group-item list-group-item-action @(ViewBag.Active == "Khachhang" ? "active" : "")">
                    <i class="fas fa-users"></i> Khách hàng
                </a>

                <div class="dropdown-divider border-secondary mx-3"></div>

                @* Cấu hình / Logout *@
                <a href="@Url.Action("Logout", "Admin")" class="list-group-item list-group-item-action text-danger">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-custom">
                <button class="btn btn-outline-secondary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="ml-auto d-flex align-items-center">
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle text-dark font-weight-bold" href="#" role="button" data-toggle="dropdown">
                            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="30" class="rounded-circle mr-1">
                            Administrator
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Hồ sơ</a>
                            <a class="dropdown-item" href="#">Cài đặt</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#">Đăng xuất</a>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid-content">
                @if (ViewBag.Title != null)
                {
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent p-0 mb-3">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Admin</a></li>
                            <li class="breadcrumb-item active text-dark" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                }

                @* Nơi nội dung của các trang con sẽ hiển thị *@
                @RenderBody()
            </div>

           
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled"); // Toggle class trên wrapper chính
            $("#sidebar-wrapper").toggleClass("toggled"); // Toggle class trên sidebar
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>