@model ESHOPPER.Models.ProductDetailsViewModel
@using Newtonsoft.Json

@{
    ViewBag.Title = Model.SanPhamChinh.TenSanPham;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    /* --- CORE CSS --- */
    :root {
        --primary: #222;
        --secondary: #555;
        --accent: #d32f2f;
        --border: #ebebeb;
        --bg-light: #f8f9fa;
    }



    /* 1. BREADCRUMB */
    .pd-breadcrumb {
        padding: 20px 0;
        font-size: 14px;
        color: #888;
    }

        .pd-breadcrumb a {
            color: #888;
            text-decoration: none;
        }

        .pd-breadcrumb span {
            margin: 0 10px;
            color: #ddd;
        }

    /* 2. GALLERY (SỬA LẠI ĐỂ ẢNH VỪA KHUNG) */
    .pd-gallery {
        position: sticky;
        top: 20px;
        height: 550px; /* Chiều cao cố định */
        background-color: #fff;
        border: 1px solid var(--border);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        padding: 20px; /* Padding để ảnh không sát viền */
    }

        .pd-gallery img {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Quan trọng: Giúp ảnh nằm gọn trong khung, không bị méo */
            transition: transform 0.5s ease;
        }

        .pd-gallery:hover img {
            transform: scale(1.05);
        }

    /* 3. INFO */
    .pd-info {
        padding-left: 20px;
    }

    .pd-brand {
        font-size: 12px;
        font-weight: 700;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 10px;
    }

    .pd-title {
        font-size: 32px;
        font-weight: 600;
        line-height: 1.2;
        margin-bottom: 15px;
        color: var(--primary);
    }

    .pd-price-row {
        display: flex;
        align-items: flex-end;
        gap: 15px;
        padding-bottom: 25px;
        border-bottom: 1px solid var(--border);
        margin-bottom: 30px;
    }

    .pd-price {
        font-size: 30px;
        font-weight: 700;
        color: var(--accent);
    }

    .pd-old-price {
        font-size: 18px;
        color: #aaa;
        text-decoration: line-through;
    }

    /* 4. SELECTORS */
    .option-wrapper {
        margin-bottom: 25px;
    }

    .option-title {
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 12px;
        display: block;
    }

    .visually-hidden-input {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* Size Chips */
    .size-chip {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 55px;
        height: 45px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin: 0 10px 10px 0;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        color: var(--primary);
        transition: all 0.2s ease;
        background: #fff;
    }

    .visually-hidden-input:checked + .size-chip {
        background: var(--primary);
        color: #fff;
        border-color: var(--primary);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .size-chip.disabled-option {
        background: #f9f9f9;
        color: #ccc;
        border-color: #eee;
        cursor: not-allowed;
    }

    /* Color Swatch */
    .color-swatch {
        display: inline-block;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        margin: 0 12px 10px 0;
        cursor: pointer;
        border: 1px solid rgba(0,0,0,0.1);
        position: relative;
    }

    .visually-hidden-input:checked + .color-swatch {
        box-shadow: 0 0 0 2px #fff, 0 0 0 4px var(--primary);
    }

    /* 5. ACTIONS */
    .action-row {
        display: flex;
        gap: 15px;
        margin-top: 40px;
        margin-bottom: 40px;
        height: 55px;
    }

    /* Style cho ô số lượng */
    .qty-box {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 120px; /* Điều chỉnh chiều rộng vừa phải */
        height: 57px;
        overflow: hidden;
        background-color: #fff;
    }

    /* Nút bấm +/- */
    .qty-btn {
        width: 35px;
        height: 100%;
        border: none;
        background-color: #f9f9f9;
        color: #333;
        font-size: 20px; /* Tăng cỡ chữ để dấu +/- to rõ */
        font-weight: 400; /* Độ đậm vừa phải */
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-bottom: 3px; /* Căn chỉnh lại một chút cho cân */
    }

        .qty-btn:hover {
            background-color: #e0e0e0;
        }

    /* Ô nhập số */
    .qty-input {
        flex-grow: 1;
        width: 100%;
        height: 100%;
        border: none;
        text-align: center;
        font-weight: 600;
        font-size: 16px;
        color: #222;
        outline: none;
        background: transparent;
    }

    .btn-buy {
        flex-grow: 1;
        height: 100%;
        background: var(--primary);
        color: #fff;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-buy:hover {
            background: #000;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* 6. POLICY & ACCORDION */
    .policy-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        background: #fff;
        padding: 25px;
        border: 1px dashed #ddd;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .policy-item {
        display: flex;
        align-items: flex-start;
        gap: 10px;
    }

        .policy-item i {
            font-size: 20px;
            color: var(--primary);
        }

    .policy-text h4 {
        font-size: 13px;
        font-weight: 700;
        margin: 0;
        text-transform: uppercase;
    }

    .policy-text p {
        font-size: 13px;
        color: var(--secondary);
        margin: 0;
    }

    .product-details-accordion {
        border-top: 1px solid var(--border);
    }

    .accordion-item {
        border-bottom: 1px solid var(--border);
    }

    .accordion-header {
        width: 100%;
        padding: 20px 0;
        background: none;
        border: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        cursor: pointer;
    }

    .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        color: var(--secondary);
        line-height: 1.6;
        font-size: 14px;
    }

    .accordion-item.active .accordion-content {
        max-height: 500px;
        padding-bottom: 20px;
    }

    .accordion-item.active .accordion-header i {
        transform: rotate(180deg);
    }

    /* RELATED */
    .related-sec {
        background: #f8f9fa;
        padding: 60px 0;
        margin-top: 60px;
    }

    .sec-title {
        text-align: center;
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 40px;
        text-transform: uppercase;
    }

    .card-modern {
        background: #fff;
        border: none;
        border-radius: 8px;
        overflow: hidden;
        height: 100%;
        transition: 0.3s;
    }

        .card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .card-img-wrap {
        height: 250px;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container-fluid px-5">
    <div class="px-xl-5 pb-3">
        <div style="position: fixed; top: 80px; right: 100px; z-index: 9999; min-width: 320px;">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-lg border-0">
                    <i class="fa fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-lg border-0">
                    <i class="fa fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <div class="pd-breadcrumb">
            <a href="@Url.Action("Index", "Home")">Trang chủ</a> <span>/</span>
            <span style="color: #333; font-weight: 600;">@Model.SanPhamChinh.TenSanPham</span>
        </div>

        <div class="row g-5">
            <div class="col-lg-7">
                <div class="pd-gallery">
                    <img id="main-product-image"
                         src="@Url.Content("~/Images/Products/" + (Model.SanPhamChinh.AnhSP ?? "no-image.png"))"
                         alt="@Model.SanPhamChinh.TenSanPham">
                </div>
            </div>

            <div class="col-lg-5">
                <div class="pd-info">
                    <div class="pd-brand">ESHOPPER ORIGINAL</div>

                    <h1 class="pd-title">@Model.SanPhamChinh.TenSanPham</h1>

                    <div class="pd-price-row">
                        <span class="pd-price" id="product-price">@string.Format("{0:N0} ₫", Model.SanPhamChinh.GiaBanLe)</span>
                    </div>

                    @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post, new { id = "productForm", onsubmit = "return validateForm()" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.SanPhamChinh.MaSP" />

                        <div class="option-wrapper">
                            <span class="option-title">Màu sắc: <span id="color-name-display" style="font-weight: 400; color: #666;">Chọn màu</span></span>
                            <div class="d-flex flex-wrap">
                                @foreach (var color in Model.CacMauDuyNhat)
                                {
                                    string colorHex = "#eee";
                                    string c = (color.TenMau ?? "").ToLower(System.Globalization.CultureInfo.CurrentCulture).Trim();
                                    if (c.Contains("black") || c.Contains("đen")) { colorHex = "#212121"; }
                                    else if (c.Contains("white") || c.Contains("trắng")) { colorHex = "#ffffff"; }
                                    else if (c.Contains("red") || c.Contains("đỏ")) { colorHex = "#D32F2F"; }
                                    else if (c.Contains("blue") || c.Contains("xanh dương")) { colorHex = "#1976D2"; }
                                    else if (c.Contains("green") || c.Contains("xanh lá")) { colorHex = "#388E3C"; }
                                    else if (c.Contains("yellow") || c.Contains("vàng")) { colorHex = "#FBC02D"; }
                                    else if (c.Contains("gray") || c.Contains("xám")) { colorHex = "#808080"; }
                                    else if (c.Contains("beige") || c.Contains("kem")) { colorHex = "#F5F5DC"; }
                                    else { colorHex = "#9E9E9E"; }

                                    <input type="radio" id="color-@color.MaMau" name="selectedColor" value="@color.MaMau" class="visually-hidden-input color-input" data-name="@color.TenMau" required>
                                    <label for="color-@color.MaMau" class="color-swatch" style="background-color: @colorHex;" title="@color.TenMau" data-bs-toggle="tooltip"></label>
                                }
                            </div>
                        </div>

                        <div class="option-wrapper">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="option-title mb-0">Kích thước</span>
                                <a href="#" style="font-size: 13px; text-decoration: underline; color: #666;">Bảng size</a>
                            </div>
                            <div class="d-flex flex-wrap">
                                @foreach (var size in Model.CacSizeDuyNhat)
                                {
                                    <input type="radio" id="size-@size.MaSize" name="selectedSize" value="@size.MaSize" class="visually-hidden-input size-input" required>
                                    <label for="size-@size.MaSize" class="size-chip" id="label-size-@size.MaSize">@size.TenSize</label>
                                }
                            </div>
                        </div>

                        <div class="action-row">
                            <div class="qty-box">
                                <button type="button" class="qty-btn btn-minus">-</button>
                                <input type="text" name="quantity" id="quantity" class="qty-input" value="1" readonly>
                                <button type="button" class="qty-btn btn-plus">+</button>
                            </div>
                            <button type="submit" class="btn-buy shadow-sm">
                                <i class="fa fa-shopping-bag"></i> &nbsp; Thêm vào giỏ hàng
                            </button>
                        </div>
                    }

                    <div class="policy-grid">
                        <div class="policy-item">
                            <i class="fa fa-truck"></i>
                            <div class="policy-text"><h4>Freeship</h4><p>Đơn > 500K</p></div>
                        </div>
                        <div class="policy-item">
                            <i class="fa fa-rotate-left"></i>
                            <div class="policy-text"><h4>Đổi trả</h4><p>30 ngày</p></div>
                        </div>
                        <div class="policy-item">
                            <i class="fa fa-shield-alt"></i>
                            <div class="policy-text"><h4>Chính hãng</h4><p>100% auth</p></div>
                        </div>
                        <div class="policy-item">
                            <i class="fa fa-headset"></i>
                            <div class="policy-text"><h4>Hỗ trợ</h4><p>24/7 online</p></div>
                        </div>
                    </div>

                    <div class="product-details-accordion">
                        <div class="accordion-item active">
                            <button class="accordion-header">
                                Mô tả chi tiết <i class="fa fa-chevron-down"></i>
                            </button>
                            <div class="accordion-content">
                                @Model.SanPhamChinh.MoTa <br /><br />
                                <strong>Chất liệu:</strong> Cotton Premium.<br />
                                <strong>Form dáng:</strong> Regular Fit.
                            </div>
                        </div>
                        <div class="accordion-item">
                            <button class="accordion-header">
                                Bảo quản <i class="fa fa-chevron-down"></i>
                            </button>
                            <div class="accordion-content">
                                - Giặt ở nhiệt độ thường.<br />
                                - Không dùng thuốc tẩy.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="related-sec">
    <div class="container-fluid px-5">
        <h3 class="sec-title">Sản phẩm tương tự</h3>
        <div class="row px-xl-5 pb-3">
            @foreach (var item in Model.SanPhamNgauNhiens)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="product-card-modern">
                        <div class="product-img-wrap">
                            <img src="@Url.Content("~/Images/Products/" + item.AnhSP)" alt="@item.TenSanPham">

                            <disv class="product-actions">
                                <a href="@Url.Action("ProductDetails", "Home", new { id = item.MaSP })" class="btn-action" title="View Detail">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </disv>
                        </div>
                        <div class="product-info">
                            <a href="@Url.Action("ProductDetails", "Home", new { id = item.MaSP })" class="text-decoration-none">
                                <h6 class="product-name">@item.TenSanPham</h6>
                            </a>
                            <div class="product-price">
                                @String.Format("{0:N0} ₫", item.GiaBanLe)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl) })
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // DATA
            const variants = @Html.Raw(JsonConvert.SerializeObject(
                Model.SanPhamChinh.BienTheSanPhams.Select(b => new {
                    b.MaSize, b.MaMau, b.GiaBan, b.AnhBienThe
                })
            ));
            const defaultPrice = @(Model.SanPhamChinh.GiaBanLe ?? 0);
            const defaultImage = '@Url.Content("~/Images/Products/" + (Model.SanPhamChinh.AnhSP ?? "no-image.png"))';
            const imageBasePath = '@Url.Content("~/Images/Products/")';

            const imgEl = document.getElementById('main-product-image');
            const priceEl = document.getElementById('product-price');
            const colorNameDisplay = document.getElementById('color-name-display');
            const sizeInputs = document.querySelectorAll('.size-input');

            // 1. LOGIC MÀU SẮC
            function handleColorChange() {
                const selectedColorInput = document.querySelector('.color-input:checked');
                if (!selectedColorInput) return;

                const colorId = parseInt(selectedColorInput.value);
                colorNameDisplay.textContent = selectedColorInput.getAttribute('data-name');

                // Đổi ảnh
                let repVariant = variants.find(v => v.MaMau === colorId && v.AnhBienThe);
                if (!repVariant) repVariant = variants.find(v => v.MaMau === colorId);

                if (repVariant && repVariant.AnhBienThe) {
                    imgEl.src = imageBasePath + repVariant.AnhBienThe;
                } else {
                    imgEl.src = defaultImage;
                }

                // Disable Size
                const availableSizes = variants.filter(v => v.MaMau === colorId).map(v => v.MaSize);

                sizeInputs.forEach(input => {
                    const sizeId = parseInt(input.value);
                    const label = document.getElementById(`label-size-${sizeId}`);

                    if (availableSizes.includes(sizeId)) {
                        input.disabled = false;
                        label.classList.remove('disabled-option');
                    } else {
                        input.disabled = true;
                        label.classList.add('disabled-option');
                        if (input.checked) input.checked = false;
                    }
                });
                updateFinalDetails();
            }

            // 2. LOGIC GIÁ
            function updateFinalDetails() {
                const sizeInput = document.querySelector('.size-input:checked');
                const colorInput = document.querySelector('.color-input:checked');
                let finalPrice = defaultPrice;

                if (sizeInput && colorInput) {
                    const v = variants.find(x => x.MaSize === parseInt(sizeInput.value) && x.MaMau === parseInt(colorInput.value));
                    if (v) finalPrice = v.GiaBan || defaultPrice;
                }
                priceEl.innerText = finalPrice.toLocaleString('vi-VN') + ' ₫';
            }

            // 3. LISTENERS
            document.querySelectorAll('.color-input').forEach(el => el.addEventListener('change', handleColorChange));
            document.querySelectorAll('.size-input').forEach(el => el.addEventListener('change', updateFinalDetails));

            // ACCORDION
            document.querySelectorAll('.accordion-header').forEach(acc => {
                acc.addEventListener('click', function() {
                    this.parentElement.classList.toggle('active');
                    const icon = this.querySelector('i');
                    if(this.parentElement.classList.contains('active')){
                        icon.classList.remove('fa-chevron-down'); icon.classList.add('fa-chevron-up');
                    } else {
                        icon.classList.add('fa-chevron-down'); icon.classList.remove('fa-chevron-up');
                    }
                });
            });

            // SỬA LỖI NÚT TĂNG GIẢM
            // Dùng e.preventDefault() để chặn submit form
            const qtyInput = document.getElementById('quantity');

            document.querySelector('.btn-plus').addEventListener('click', function(e) {
                e.preventDefault();
                let val = parseInt(qtyInput.value) || 0;
                qtyInput.value = val + 1;
            });

            document.querySelector('.btn-minus').addEventListener('click', function(e) {
                e.preventDefault();
                let val = parseInt(qtyInput.value) || 1;
                if (val > 1) qtyInput.value = val - 1;
            });
        });

        function validateForm() {
            const sizeInput = document.querySelector('.size-input:checked');
            const colorInput = document.querySelector('.color-input:checked');
            if (!sizeInput || !colorInput) {
                alert("Vui lòng chọn đầy đủ Kích thước và Màu sắc!");
                return false;
            }
            return true;
        }
        $(document).ready(function () {
            // Tìm tất cả các element có class ".alert"
            // Đợi 2 giây (2000ms)
            // Sau đó trượt lên (slideUp) để ẩn đi
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove();
                });
            }, 2000);
        });
    </script>
}