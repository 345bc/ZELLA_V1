                        <p class="help-block text-danger"></p>
                    </div>
                            </div>
                        </div>

                        <div class="control-group mb-3">
                            <input type="text" class="form-control form-control-custom" id="subject" placeholder="Subject"
                               required="required" data-validation-required-message="Please enter a subject" />
                        <p class="help-block text-danger"></p>
                    </div>

                        <div class="control-group mb-4">
                            <textarea class="form-control form-control-custom" rows="6" id="message" placeholder="Message"
                                  required="required"
                                  data-validation-required-message="Please enter your message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>

                    <div>
                            <button class="btn btn-custom w-100" type="submit" id="sendMessageButton">
