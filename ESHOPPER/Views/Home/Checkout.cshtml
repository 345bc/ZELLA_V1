@model ESHOPPER.Models.DonHang

@{
    ViewBag.Title = "Secure Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy dữ liệu giỏ hàng
    var gioHang = ViewBag.GioHang as ESHOPPER.Models.GioHang;

    // Kiểm tra trạng thái đăng nhập
    bool isLoggedIn = Session["MaKH"] != null;

    // Class CSS cho ô input
    string normalClass = "form-control form-control-custom"; // Bình thường
    string lockedClass = "form-control form-control-custom bg-secondary text-dark"; // Bị khóa (xám)
}

<style>
    .checkout-container {
        background-color: #f8f9fa;
        padding: 50px 0;
    }

    /* Card Style */
    .checkout-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        padding: 30px;
        margin-bottom: 30px;
    }

    .card-header-custom {
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
        margin-bottom: 25px;
    }

        .card-header-custom h4 {
            font-weight: 700;
            color: #333;
        }

    /* Form Controls */
    .form-control-custom {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px 15px;
        height: auto;
        font-size: 0.95rem;
        background-color: #fbfbfb;
    }

        .form-control-custom:focus {
            border-color: #D19C97;
            box-shadow: 0 0 0 3px rgba(209, 156, 151, 0.2);
            background-color: #fff;
        }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    /* Payment Options */
    .payment-option {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
    }

        .payment-option:hover, .payment-option.active {
            border-color: #D19C97;
            background-color: #fff9f9;
        }

        .payment-option input {
            margin-right: 15px;
            transform: scale(1.2);
        }

    .payment-logo {
        height: 30px;
        margin-left: auto;
    }

    /* Summary Section */
    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        font-size: 0.95rem;
    }

    .summary-total {
        border-top: 2px dashed #eee;
        padding-top: 15px;
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
        font-size: 1.2rem;
        font-weight: 800;
        color: #D19C97;
    }

    .btn-place-order {
        width: 100%;
        padding: 15px;
        border-radius: 30px;
        background: #222;
        color: #fff;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        transition: 0.3s;
    }

        .btn-place-order:hover {
            background: #D19C97;
            box-shadow: 0 10px 20px rgba(209, 156, 151, 0.4);
        }
</style>

<div class="checkout-container">
    <div class="container">

        <div class="text-center mb-5">
            <h2 class="font-weight-bold">Secure Checkout</h2>
            <p class="text-muted">Please fill in your details to complete your order.</p>
        </div>

        @using (Html.BeginForm("Checkout", "Home", FormMethod.Post, new { id = "checkoutForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-lg-7">
                    <div class="checkout-card">
                        <div class="card-header-custom">
                            <h4><i class="fa fa-user-circle mr-2 text-primary"></i> Customer Information</h4>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                <div class="position-relative">
                                    <input type="text"
                                           name="TenNguoiNhan"
                                           value="@Model.TenNguoiNhan"
                                           class="@(isLoggedIn ? lockedClass : normalClass)"
                                           placeholder="e.g. Nguyen Van A"
                                           required
                                           @(isLoggedIn ? "readonly" : "") />

                                    @if (isLoggedIn)
                                    {
                                        <i class="fa fa-lock position-absolute text-muted" style="right: 15px; top: 12px;" title="Verified Account"></i>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <div class="position-relative">
                                    <input type="text"
                                           name="SDTNguoiNhan"
                                           value="@Model.SDTNguoiNhan"
                                           class="@(isLoggedIn ? lockedClass : normalClass)"
                                           placeholder="e.g. 0912345678"
                                           required
                                           @(isLoggedIn ? "readonly" : "") />

                                    @if (isLoggedIn)
                                    {
                                        <i class="fa fa-lock position-absolute text-muted" style="right: 15px; top: 12px;" title="Verified Account"></i>
                                    }
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label class="form-label">Shipping Address <span class="text-danger">*</span></label>
                                <textarea name="DiaChiNhan"
                                          class="@normalClass"
                                          rows="3"
                                          placeholder="House number, Street name, Ward, District, City..."
                                          required>@Model.DiaChiNhan</textarea>

                                @if (isLoggedIn)
                                {
                                    <small class="text-muted mt-2 d-block">
                                        <i class="fa fa-info-circle"></i> You can update the shipping address for this order.
                                    </small>
                                }
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Order Notes (Optional)</label>
                                <textarea name="GhiChu" class="@normalClass" rows="2" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="checkout-card">
                        <div class="card-header-custom">
                            <h4><i class="fa fa-credit-card mr-2 text-primary"></i> Payment Method</h4>
                        </div>

                        <div class="payment-option active" onclick="selectPayment('cod')">
                            <input type="radio" name="paymentMethod" id="cod" value="COD" checked>
                            <label class="mb-0 font-weight-bold" for="cod" style="cursor:pointer; flex-grow:1;">Cash on Delivery (COD)</label>
                            <i class="fa fa-money-bill-wave fa-lg text-success"></i>
                        </div>

                        <div class="payment-option" onclick="selectPayment('vnpay')">
                            <input type="radio" name="paymentMethod" id="vnpay" value="VNPay">
                            <label class="mb-0 font-weight-bold" for="vnpay" style="cursor:pointer; flex-grow:1;">Pay with VNPay</label>
                            <img src="https://vnpay.vn/assets/images/logo-icon/logo-primary.svg" class="payment-logo" alt="VNPay">
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="checkout-card" style="position: sticky; top: 100px;">
                        <div class="card-header-custom">
                            <h4>Order Summary</h4>
                        </div>

                        <div class="mb-4">
                            @if (gioHang != null && gioHang.ChiTietGioHangs != null)
                            {
                                foreach (var item in gioHang.ChiTietGioHangs)
                                {
                                    <div class="d-flex align-items-center mb-3 border-bottom pb-3">
                                        <div style="position: relative;">
                                            <img src="@Url.Content("~/Images/Products/" + (item.SanPham?.AnhSP ?? "no-image.png"))"
                                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; margin-right: 15px;">
                                            <span class="badge badge-secondary rounded-circle"
                                                  style="position: absolute; top: -5px; right: 5px; width: 20px; height: 20px; padding: 0; line-height: 20px;">
                                                @item.SoLuong
                                            </span>
                                        </div>
                                        <div style="flex-grow: 1;">
                                            <h6 class="mb-0 font-weight-bold" style="font-size: 0.9rem;">@(item.SanPham?.TenSanPham ?? "Product Name")</h6>
                                            <small class="text-muted">Size: @item.MaSize | Color: @item.MaMau</small>
                                        </div>
                                        <div class="font-weight-bold">
                                            @string.Format("{0:N0} ₫", item.DonGia * item.SoLuong)
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <div class="summary-item">
                            <span class="text-muted">Subtotal</span>
                            <span class="font-weight-bold">@string.Format("{0:N0} ₫", gioHang?.TongTienTamTinh())</span>
                        </div>
                        <div class="summary-item">
                            <span class="text-muted">Shipping</span>
                            <span class="text-success font-weight-bold">Free</span>
                        </div>

                        <div class="summary-total">
                            <span>Total</span>
                            <span>@string.Format("{0:N0} ₫", gioHang?.TongTienTamTinh())</span>
                        </div>

                        <button type="submit" class="btn-place-order mt-4">
                            Complete Order <i class="fa fa-arrow-right ml-2"></i>
                        </button>

                        <div class="text-center mt-3">
                            <small class="text-muted"><i class="fa fa-lock mr-1"></i> Your data is protected by SSL.</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function selectPayment(id) {
        // Reset style
        document.querySelectorAll('.payment-option').forEach(el => el.classList.remove('active'));

        // Active current
        const selected = document.getElementById(id);
        selected.checked = true;
        selected.closest('.payment-option').classList.add('active');
    }
</script>